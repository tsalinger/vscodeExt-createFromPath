{
    "name": "foldercreator",
    "displayName": "FolderCreator",
    "description": "Create folders of arbitrary depth",
    "version": "0.0.1",
    "publisher": "publisher",
    "engines": {
        "vscode": "^1.19.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.createNewFolders"
    ],
    "main": "./out/extension",
    "contributes": {
        "menus": {
            "commandPalette": [
                {
                    "command": "extension.createNewFolders",
                    "when": "filesExplorerFocus"
                }
            ],
            "explorer/context": [
                {
                    "command": "extension.createNewFolders",
                    "group": "1_modification"
                }
            ]
        },
        "commands": [
            {
                "command": "extension.createNewFolders",
                "title": "Create new folders"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "vscode-uri": "^1.0.1",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
